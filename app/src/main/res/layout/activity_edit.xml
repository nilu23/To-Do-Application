<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppBaseTheme"
    tools:context="com.example.fnilofar.firstandriodapplication.EditActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Edit Due Date"
        android:id="@+id/dueDateField"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/dueDate"
        android:layout_below="@+id/dueDateField"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeDate"
        android:text="CHANGE"
        android:layout_toRightOf="@+id/dueDate"
        android:layout_alignBottom="@+id/dueDate"
        android:layout_below="@+id/dueDateField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/savebtn"
        android:id="@+id/savebtn"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/dueDate"
        android:layout_toEndOf="@+id/dueDate" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_marginTop="47dp"
        android:id="@+id/button"
        android:layout_below="@+id/dueDate"
        android:layout_toLeftOf="@+id/savebtn"
        android:layout_toStartOf="@+id/savebtn" />

</RelativeLayout>
